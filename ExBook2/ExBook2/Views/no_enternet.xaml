<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExBook2.Views.no_internet">
    <ContentPage.Resources>
            <ResourceDictionary>
                <Style x:Key="buttonStyle" TargetType="Button">
                    <Setter Property="ContentLayout" Value="Right,10"/>
                    <Setter Property="TextColor" Value="Black"/>
                    <Setter Property="FontSize" Value="Title"/>
                    <Setter Property="BackgroundColor" Value="#f1bf8c"/>
                    <Setter Property="Margin" Value="15, 5 , 15 , 5"/>
                    <Setter Property="Padding" Value="15 , 5, 15 ,5"/>
                    <Setter Property="BorderWidth" Value="2"/>
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </ResourceDictionary>
        </ContentPage.Resources>
        <StackLayout>
            <Image Source="https://supportmymoto.com/wp-content/uploads/2021/11/Wifi-Connected-but-no-Internet.jpg" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Retry" Style="{StaticResource buttonStyle}" Command="{Binding RetryCommand}"/>
        </StackLayout>
</ContentPage>