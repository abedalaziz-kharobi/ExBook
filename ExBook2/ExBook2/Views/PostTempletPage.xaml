<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExBook2.Views.PostTempletPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

            <Frame
	         Grid.Row="4"
             Margin="10,40,10,10"
	         Padding="60"
	        CornerRadius="8"
	         HasShadow="False">
                <Editor  x:Name="Txtt" Text="{Binding text}" Placeholder="Enter text here" Style="{StaticResource entrystyle}" TextColor="Black"   />
            </Frame>

            <Button Style="{StaticResource buttonStyle}" Text="Post" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>