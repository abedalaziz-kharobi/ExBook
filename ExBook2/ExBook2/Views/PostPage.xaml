<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExBook2.Views.PostPage"
             Title="Post Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Post"
                     x:Name="AddToolBarItem"
                      Clicked="AddToolBarItem_Clicked" >

        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content >
        <ListView x:Name="PostListView"
                  ItemsSource="{ Binding p}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding Post}" FontSize="Medium" TextColor="Black"></Label>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>