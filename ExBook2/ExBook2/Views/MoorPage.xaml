<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExBook2.Views.MoorPage"
             >
    <RefreshView>
        <ScrollView>
            <StackLayout Margin="15,100">
                <Button Text="حسابي" x:Name="profile" Clicked="Profile_Clicked" Style="{StaticResource buttonStyle}"/>
                <Button Text="المفضلة" x:Name="Favorite" Clicked="Favorite_Clicked" Style="{StaticResource buttonStyle}"/>
                <Button Text= "تواصل معنا" x:Name="Connect_us" Clicked="Connect_us_Clicked" Style="{StaticResource buttonStyle}"/>
                <Button Text="اضافة كتاب" x:Name="lift_book" Clicked="lift_book_Clicked" Style="{StaticResource buttonStyle}"/>
                <ImageButton Source="https://img.icons8.com/ios/344/logout-rounded-left.png" BackgroundColor="White" Margin="15,100,15,0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" HeightRequest="60" x:Name="Logout" Clicked="Logout_Clicked"/>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>